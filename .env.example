# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/dock-d
# Or use MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/dock-d

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Firebase Configuration
# Download your Firebase service account JSON file from Firebase Console
# and place it in the config folder, then update the path below
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# CORS Origin (Frontend URL)
CORS_ORIGIN=http://localhost:3000
